Membro
package com.br.bruno.biblioteca.sistema;

public class Membro {
    private String nome;
    private String idMembro;

    public Membro(String nome, String id){
        this.nome = nome;
        this.idMembro = id;
    }

    public String getNome(){
        return this.nome;
    }

    public String getIdMembro(){
        return this.idMembro;
    }

    @Override
    public String toString() {
        String mensagem = "Nome: " + this.nome + "\nId: " + this.idMembro;
        return mensagem;
    }
}
